{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/spec",
    "types": [
      "jest",
      "node",
    ],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "emitDecoratorMetadata": false,
    "allowJs": true,
    "isolatedModules": true
  },
  "files": [
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.spec.ts",
    "src/**/*.d.ts",
    "src/test/**/*.ts"
  ]
}
